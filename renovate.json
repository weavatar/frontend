{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "commitMessagePrefix": "chore(deps): ",
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "description": "Automerge updates",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ],
      "automerge": true
    }
  ],
  "ignoreDeps": [
    "eslint"
  ]
}
